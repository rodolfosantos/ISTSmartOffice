<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<repositories>
		<repository>
			<id>maven-restlet</id>
			<name>Public online Restlet repository</name>
			<url>http://maven.restlet.org</url>
		</repository>
	</repositories>

	<parent>
		<relativePath>../pom.xml</relativePath>
		<groupId>eu.smartcampus.api</groupId>
		<artifactId>eu.smartcampus.api</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<artifactId>eu.smartcampus.api.deviceconnectivity.impls.modbus</artifactId>
	<packaging>bundle</packaging>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId};singleton:=true</Bundle-SymbolicName>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Export-Package>eu.smartcampus.api.deviceconnectivity.impls.modbus</Export-Package>
						<Bundle-Activator>eu.smartcampus.api.deviceconnectivity.impls.modbus.Activator</Bundle-Activator>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<name>eu.smartcampus.api.deviceconnectivity.impls.modbus</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<dependencies>
		<dependency>
			<groupId>eu.smartcampus.api</groupId>
			<artifactId>eu.smartcampus.api.deviceconnectivity</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>eu.smartcampus.api</groupId>
			<artifactId>eu.smartcampus.api.historydatastorage</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.googlecode.json-simple</groupId>
			<artifactId>json-simple</artifactId>
			<version>1.1</version>
		</dependency>
		<dependency>
			<groupId>org.rxtx</groupId>
			<artifactId>rxtx</artifactId>
			<version>2.1.7</version>
		</dependency>
		<dependency>
			<groupId>modbus</groupId>
			<artifactId>modbus4J</artifactId>
			<version>0.0.2</version>
		</dependency>
		<dependency>
			<groupId>serotonin</groupId>
			<artifactId>seroutils</artifactId>
			<version>0.0.1</version>
		</dependency>
		<dependency>
			<groupId>eu.smartcampus.api</groupId>
			<artifactId>eu.smartcampus.api.logger</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>

	</dependencies>
</project>
